//*****************************************************************************************************
#ifndef _ITEMENTITYDATA_H_
#define _ITEMENTITYDATA_H_
//*****************************************************************************************************
#include "NoCharacterEntityData.h"
//*****************************************************************************************************
namespace MG
{
	//*****************************************************************************************************
	//ArmyData
	struct ItemEntityData : public NoCharacterEntityData
	{ 	
		U32 mItemTemplateId			;		//道具的模板Id
		U32 mItemNum				;		//数量

		//------------------------------------------------------------------------
		ItemEntityData()
			:mItemTemplateId(0)
			,mItemNum(0)
		{

		}

		//------------------------------------------------------------------------
		ItemEntityData& operator=(const ItemEntityData& A)
		{
			if (this == &A)
			{
				return *this;
			}

			NoCharacterEntityData::operator =(A);

			mItemTemplateId			=	A.mItemTemplateId	;	
			mItemNum				=	A.mItemNum			;		
			

			return *this;
		}  

	};
}
//*****************************************************************************************************
#endif
//*****************************************************************************************************